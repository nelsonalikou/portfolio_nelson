<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>

        <!--Css de la navBar -->
        <link rel="stylesheet" href="https://bootswatch.com/4/cosmo/bootstrap.min.css">

        <!--Bootstrap 5 CSS-->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css">
        <!--Gallerie d'images RÃ©seaux Sociaux-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

        <!--<link rel="stylesheet" href="{{ asset('css/header.css') }}">-->
        <link rel="stylesheet" href="{{ asset('css/footer.css') }}">

        <!--SweetAlert CSS-->
        <!--<link rel="stylesheet" href="{{ asset('sweet_alert/node_modules/sweetalert2/dist/sweetalert2.css') }}">-->
        <link rel="stylesheet" href="{{ asset('sweet_alert/node_modules/@sweetalert2/themes/dark/dark.css') }}">

        <style>
            .degrade{
                color: #eeeeee;
                /*background-image:-moz-linear-gradient(30deg, white, black) ;
                background-image:-webkit-linear-gradient(30deg, white, black);
                background-image:-o-linear-gradient(30deg, white, black);
                background-image:linear-gradient(60deg, white, black);
                background-repeat: no-repeat;
                background-position: center;
                background-attachment: fixed;*/

                background-image: linear-gradient( 109.6deg,  rgba(17,151,147,1) 11.2%, rgba(154,214,212,1) 55.4%, rgba(255,233,171,1) 100.2% );
            }

            #scrollUp
            {
                position: fixed;
                bottom : 10px;
                right: -100px;
                opacity: 0.5;
            }

            .scroll {
                cursor: pointer;
                width: 70px;
                height: 70px;
                position: fixed;
                bottom: 40px;
                right: -80px;
                border-radius: 100%;
                background-image: radial-gradient( circle farthest-corner at 10% 20%,  rgba(90,92,106,1) 0%, rgba(32,45,58,1) 81.3% );
                color: #fff;
                font-size: 44px;
                font-weight: bold;
                text-align: center;
                box-shadow: 0 0 5px 0px #888;
                transition: 300ms;
            }

            /*.scroll i {
                margin-top: 10px;
                text-shadow: 0 0 2px #fff;
            }*/

            .scroll:hover i {
                animation-name: rotate;
                animation-duration: 300ms;
                animation-iteration-count: infinite;
                animation-direction: alternate;
            }

            @keyframes rotate {
                from {margin-top: 15px}
                to {margin-top: 5px}
            }

            .visible {
                right: 30px;
                transition: all 400ms;
                transform: rotate(360deg)
            }
        </style>

        {% block stylesheets %}{% endblock %}
    </head>

    <body class="degrade">
        {{ include('AllPagesComponents/header.html.twig') }}

        <main>{% block body %}{% endblock %}</main>

        {{ include('AllPagesComponents/footer.html.twig') }}


        <!--<div id="scrollUp">
            <a href="#top"><img src="{{ asset('images/logo/to_top.png') }}" alt="boutton_retour_entete"/></a>
        </div>-->
        <div id="jsScroll" class="scroll" onclick="scrollToTop();">
            <i class="fa fa-angle-up"></i>
        </div>

        <!--Bootstrap 5 JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

        <!--Alert Blanc-->
        <!--<script src="{{ asset('sweet_alert/node_modules/sweetalert2/dist/sweetalert2.all.min.js') }}"></script>-->

        <!--Alert Noir-->
        <script src="{{ asset('sweet_alert/node_modules/sweetalert2/dist/sweetalert2.min.js') }}"></script>

        <!--Importer JQuery
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>-->

        <script src="{{ asset('js/alert.js') }}"></script>

        {% block javascripts %}{% endblock %}
    </body>
</html>
