{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/carousel.css') }}">
    <link rel="stylesheet" href="{{ asset('sweet_alert/node_modules/sweetalert2/dist/sweetalert2.css') }}">
    <style>
        h3{
            color: rgba(0,0,0,0.5);
        }

        p::first-letter, h3::first-letter{
            margin-left: 10px;
            font-size: 1.5em;
        }

        .ml9 {
            position: relative;
            font-weight: 200;
            font-size: 4em;
            display: flex;
            justify-content: center;
        }

        @media screen and (max-width: 600px) {
            .ml9 {
            font-size: 2em;
            }
        }

        .ml9 .text-wrapper {
            position: relative;
            display: inline-block;
            padding-top: 0.2em;
            padding-right: 0.05em;
            padding-bottom: 0.1em;
            overflow: hidden;
        }

        .ml9 .letter {
            transform-origin: 50% 100%;
            display: inline-block;
            line-height: 1em;
        }

        .carousel-caption{
            background-color: rgba(0,0,0,0.5) ;
            font-size: 1.2em;
        }

        .descriptions{
            display: none;
        }

        @media screen and (max-width: 450px) {
            .descriptions{
                display: flex;
                flex-direction: column;
                margin: 10px;
            }
        }


    </style>
{% endblock %}

{% block body %}

    <h1 class="ml9">
        <span class="text-wrapper">
            <span class="letters">Mes Réalisations</span>
        </span>
    </h1>

    <div id="carouselExemple" class="carousel slide" data-ride="carousel" data-interval="3000">

        {% for message in app.flashes('message') %}
            <div class="p-3 my-2 rounded-2 success" style="background-color: greenyellow; color:darkblue;">{{ message }}</div>
        {% endfor %}

        <ol class="carousel-indicators">
            <li data-target="#carouselExemple" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExemple" data-slide-to="1"></li>
            <li data-target="#carouselExemple" data-slide-to="2"></li>
            <li data-target="#carouselExemple" data-slide-to="3"></li>
        </ol>


        <div class="carousel-inner">

            <div class="carousel-item active">
                <img src="{{ asset('images/carousel/confineat2.PNG') }}"
                     class="d-block" alt="confineat">
                <a href="https://confineat.000webhostapp.com/index.php?action=login" >
                    <div class="carousel-caption d-none d-md-block">
                        <h3>Confineat</h3>
                        <p>Petit extrait de la page d'accueil du site Web. Le site a été développé avec HTML, CSS, JavaScript pour le Front-end et PHP, AJAX, SQL pour le Back-end.</p>
                    </div>
                </a>
            </div>

            <div class="carousel-item">
                <img src="{{ asset('images/carousel/admin_bd.PNG') }}"
                     class="d-block" alt="premier site web">
                <a href="https://gitlab.com/alikou_nelson/site-web" >
                    <div class="carousel-caption d-none d-md-block">
                        <h3></h3>
                        <p>Présentation du métier Administateur base de données. Utilisation de HTML et CSS.</p>
                    </div>
                </a>
            </div>

            <div class="carousel-item">
                <img src="{{ asset('images/carousel/labyrinth.png') }}"
                     class="d-block" alt="labyrinth">
                <a href="https://gitlab.com/alikou_nelson/projet_web_3d" >
                    <div class="carousel-caption d-none d-md-block">
                        <h3>Labyrinth</h3>
                        <p>Developpé avec A-Frame, Python et JavaScript.</p>
                    </div>
                </a>
            </div>

            <div class="carousel-item">
                <img src="{{ asset('images/carousel/solitaire.png') }}"
                     class="d-block" alt="labyrinth">
                <a href="https://gitlab.com/alikou_nelson/projet-poo" >
                    <div class="carousel-caption d-none d-md-block">
                        <h3>Solitaire</h3>
                        <p>Entièrement développé en PHP</p>
                    </div>
                </a>
            </div>

        </div>

        <a href="#carouselExemple" class="carousel-control-prev" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a href="#carouselExemple" class="carousel-control-next" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>

    <div class="descriptions">

        <div class="description">
            <h3>Confineat</h3>
            <p>Petit extrait de la page d'accueil du site Web. Le site a été développé avec HTML, CSS, JavaScript pour le Front-end et PHP, AJAX, SQL pour le Back-end.</p>
        </div>

        <div class="description">
            <h3>Administrateur Base de données</h3>
            <p>Présentation du métier Administateur base de données. Utilisation de HTML et CSS.</p>
        </div>

        <div class="description">
            <h3>Labyrinth</h3>
            <p>Developpé avec A-Frame, Python et JavaScript.</p>
        </div>

        <div class="description">
            <h3>Solitaire</h3>
            <p>Entièrement développé en PHP</p>
        </div>

    </div>

{% endblock %}



{% block javascripts %}
    <!--effet du texte page d'accueil -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
    <script src="{{ asset('js/effet_texte.js') }}"></script>
{% endblock %}